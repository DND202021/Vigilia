# ERIOP Backend Environment Configuration
# Copy this file to .env and update values

# Application
APP_NAME=ERIOP
DEBUG=false
ENVIRONMENT=development

# Security - CHANGE THESE IN PRODUCTION
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql+asyncpg://eriop:eriop@localhost:5432/eriop

# Redis
REDIS_URL=redis://localhost:6379/0

# MQTT (Fundamentum)
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

# CORS (comma-separated origins or JSON array)
CORS_ORIGINS_STR=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=INFO
